---
import { Picture } from '@astrojs/image/components';

import Social from './Social.astro';

const imageUrl =
  'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80';
---

<div
  class="relative isolate -z-0 -mt-[88px] flex min-h-screen flex-col justify-center overflow-hidden bg-white"
>
  <div
    class="mx-auto max-w-7xl px-6 pt-10 pb-24 sm:pb-32 lg:flex lg:items-center lg:py-40 lg:px-8"
  >
    <div class="flex flex-1 justify-center lg:justify-end lg:pr-10">
      <!-- <img
        class="aspect-[2/2] h-1/2 w-1/2 rounded-full object-cover sm:h-1/3 sm:w-1/3 lg:h-4/6 lg:w-4/6"
        src={localImage}
      /> -->
      <div class="px-16 lg:px-14">
        <Picture
          src={imageUrl}
          widths={[200, 400, 800]}
          aspectRatio="4:4"
          sizes="(max-width: 400px) 100vw, 400px"
          alt="descriptive text"
          class="rounded-full"
        />
      </div>
      <!-- <Image src={localImage} aspectRatio="16:9" format="avif" alt={'test'} /> -->
    </div>
    <div class="relative mt-10 lg:mt-0 lg:flex-none">
      <h1
        class="mx-auto flex items-start justify-center text-2xl font-bold lg:justify-start lg:text-6xl"
      >
        <div
          class="wra relative z-10 px-4 py-2 uppercase tracking-wider text-slate-800 lg:px-12 lg:py-4"
        >
          Jose
          <div
            class="absolute inset-0 -z-10 h-full w-full skew-x-[-30deg] bg-rose-500 text-4xl"
          >
          </div>
        </div>

        <div
          class="relative mt-6 -ml-6 px-4 py-2 uppercase tracking-wider text-gray-200 lg:-ml-12 lg:mt-12 lg:px-12 lg:py-4"
        >
          Santos IV<div
            class="absolute inset-0 -z-10 h-full w-full skew-x-[-30deg] bg-slate-800 text-4xl"
          >
          </div>
          <p
            class="absolute top-0 right-0 -mt-8 -mr-12 text-xs leading-8 text-gray-600 lg:-mt-10 lg:-mr-4 lg:text-lg"
          >
            Web • Better • Faster
          </p>
        </div>
      </h1>
    </div>
  </div>
  <div class="px-4 text-center">
    <h2
      class="overflow-hidden text-center text-2xl leading-10 tracking-widest lg:text-3xl"
    >
      <div class="block overflow-hidden lg:inline-block lg:overflow-visible">
        <div class="relative -mr-[120px] inline-block lg:-mr-0">
          <div class="absolute right-full -top-0 w-full lg:-top-1">
            <ul class="animation list-none text-right text-rose-500">
              <li class="m-0 font-custom leading-10">Resourceful</li>
              <li class="m-0 font-custom leading-10">Talented</li>
              <li class="m-0 font-custom leading-10">Awesome</li>
              <li class="m-0 font-custom leading-10">Hardworking</li>
            </ul>
          </div>
          &nbsp;front-end
        </div>
      </div>

      <div class="text-slate-700 lg:-mr-[120px] lg:inline-block">
        developer from the Philippines.
      </div>
    </h2>
  </div>
  <div class="py-20">
    <Social />
  </div>
</div>

<style>
  .animation {
    -webkit-animation-name: change;
    -webkit-animation-duration: 10s;
    -webkit-animation-iteration-count: infinite;
    animation-name: change;
    animation-duration: 10s;
    animation-iteration-count: infinite;
  }

  @-webkit-keyframes opacity {
    0%,
